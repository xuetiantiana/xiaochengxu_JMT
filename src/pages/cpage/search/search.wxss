/* pages/cpage/search/search.wxss */
.searchBox{display: flex;flex-direction: row;flex-wrap: nowrap;padding:50rpx 30rpx;font-size: 28rpx;background:#00c9a9;line-height: 70rpx;justify-content: space-between;}
.searchBox .inutBox{height:70rpx;border-radius: 70rpx;width: 70%;padding-left: 30rpx;position: relative;background: #fff}
.searchBox .inutBox input{width: 80%;height: 40rpx;margin-top:10rpx}
.searchBox .inutBox .searchBtn{position: absolute;right:0;top:0;background: url(https://www.jlrbjb.com/static/images/selectsd.png) no-repeat 30rpx center;background-size: 40rpx auto;width: 100rpx;height: 100%;z-index: 5}
.searchBox .cityBox{width: 22%;color:#fff;border-radius: 70rpx;text-align: center;background: #00a185;background:#00a185 url(http://127.0.0.1:8000/static/images/icon_16.png) no-repeat 30rpx center;background-size: 30rpx auto;text-indent: 40rpx}
.searchTabBox{padding:40rpx 30rpx;font-size: 32rpx}
.hot_ul{display: flex;flex-direction: row;flex-wrap: wrap;margin:20rpx 0}
.hot_ul .hot_li{padding:10rpx 30rpx;background: #f5f5f5;border-radius: 4px;margin-right: 20rpx;font-size: 28rpx;margin-bottom:20rpx;}
.history_ul .history_li{font-size: 28rpx;border-bottom:1px solid #f5f5f5;padding:20rpx 0;position: relative;margin-top:10rpx}
.history_ul .history_li text{position: absolute;right:0;bottom:20rpx;color:#aaa}
.tit{color:#333;font-weight: blod}
page{background: #fff;}
.job_ul{background: #f5f5f5;padding-top:20rpx}